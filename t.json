---
layout: none
---
{
    "posts": [
        {% for post in site.posts %}
            {
                "title": "{{ post.title }}",
                "content": "{{ post.content | strip_html | strip_newlines | replace: '\', '' | replace: '"', '' | escape | replace: ' ', ''}}",

                "categories": [
                    {% for category in post.categories %}
                        "{{ category }}"{% if forloop.index != post.categories.size %},{% endif %}
                    {% endfor %}
                ],
                "tags": [
                    {% for tag in post.tags %}
                        "{{ tag }}"{% if forloop.index != post.tags.size %},{% endif %}
                    {% endfor %}
                ]
            }{% if forloop.index != site.posts.size %},{% endif %}
        {% endfor %}
    ]
}